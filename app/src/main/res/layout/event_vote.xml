<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".EventVoteActivity">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".EventVoteActivity"
        android:weightSum="1"
        android:id="@+id/entireScreen">

        <Button
            android:id="@+id/logOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LogOutButton"
            android:layout_marginBottom="68dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="325dip"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:id="@+id/button1"
            android:onClick="restaurantClicked"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:gravity="start"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="325dip"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:id="@+id/button2"
            android:text=""
            android:onClick="restaurantClicked"
            android:layout_below="@+id/button1"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:gravity="start" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="325dip"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:id="@+id/button3"
            android:text=""
            android:onClick="restaurantClicked"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:gravity="start" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="325dip"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:id="@+id/button4"
            android:text=""
            android:onClick="restaurantClicked"
            android:layout_below="@+id/button3"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:gravity="start" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="325dip"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:id="@+id/button5"
            android:text=""
            android:onClick="restaurantClicked"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:gravity="start" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/count1"
            android:layout_toLeftOf="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/count2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button1"
            android:textAlignment="center"
            android:layout_toLeftOf="@+id/button1" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/count3"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toStartOf="@+id/button3"
            android:textAlignment="center" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/count4"
            android:layout_below="@+id/button3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button4"
            android:layout_toStartOf="@+id/button4"
            android:textAlignment="center" />

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/count5"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button5"
            android:layout_toStartOf="@+id/button5"
            android:textAlignment="center" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
